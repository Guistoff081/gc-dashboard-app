<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Marca</th>
      <th>Quantidade</th>
      <th>Pre√ßo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.marca %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.price %></td>
        <td><%= link_to 'Mostrar', produto, :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto), :class => "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Tem certeza que deseja eliminar este item?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

