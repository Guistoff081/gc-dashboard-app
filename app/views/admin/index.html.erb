<h1 class="text-center">Dashboard</h1>

<div class="text-center">
    <%= link_to 'Cadastrar Cliente', new_cliente_path, :class => "btn btn-default btn-lg" %>

    <%= link_to 'Cadastrar Produto', new_produto_path, :class => "btn btn-default btn-lg" %>
    <div class="row">
        <div class="col-sm-12">
            <strong>Clientes Cadastrados</strong>
                <%= line_chart Cliente.group_by_day(:created_at).count, refresh: 60 %>
                    <div class="col-sm-4">
                        <strong>Produtos Cadastrados</strong>
                            <%= pie_chart Produto.group(:marca).count, refresh: 60 %>    
                    </div>
                <div class=col-sm-8>
                    <strong>Clientes por nome</strong>
                    <%= column_chart Cliente.group(:nome).count, refresh: 60 %>
                </div>
       
        </div>  
    </div>

</div>

